@page "/entry"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using Microsoft.Extensions.Logging
@using Microsoft.AspNetCore.Components.Forms
@using TraderUI.Services
@inject TraderUI.Services.SessionService SessionService
@inject TraderUI.Services.ApiClient ApiClient
@inject NavigationManager Navigation
@inject ILogger<NameEntry> Logger

<PageTitle>Enter Your Name</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="card-title mb-0">Welcome to Trader System</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@formModel" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <InputText id="name" @bind-Value="formModel.Name" class="form-control" placeholder="Enter your name" />
                            <ValidationMessage For="@(() => formModel.Name)" />
                        </div>
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @errorMessage
                            </div>
                        }
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span> Processing...</span>
                                }
                                else
                                {
                                    <span>Continue</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                    
                    @if (existingSessions != null && existingSessions.Any())
                    {
                        <hr class="my-4" />
                        
                        <h5 class="mb-3">Existing Users</h5>
                        
                        @if (isLoadingSessions)
                        {
                            <div class="text-center">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var session in existingSessions)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <button type="button" class="btn btn-link p-0 text-start flex-grow-1" 
                                                @onclick="() => LoginAsUser(session.Name)"
                                                disabled="@(deletingSessionId == session.SessionId)">
                                            @session.Name
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                @onclick="() => DeleteUser(session)"
                                                disabled="@(deletingSessionId == session.SessionId)">
                                            @if (deletingSessionId == session.SessionId)
                                            {
                                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                            }
                                            else
                                            {
                                                <span>Delete</span>
                                            }
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private NameEntryModel formModel = new();
    private bool isSubmitting = false;
    private string? errorMessage;
    private IEnumerable<SessionResponse>? existingSessions;
    private bool isLoadingSessions = false;
    private string? deletingSessionId;

    protected override void OnInitialized()
    {
        if (SessionService.IsUserSet)
        {
            Navigation.NavigateTo("/trades");
        }
    }
    
    protected override async Task OnInitializedAsync()
    {
        await LoadExistingSessions();
    }
    
    private async Task LoadExistingSessions()
    {
        isLoadingSessions = true;
        try
        {
            var response = await ApiClient.GetSessionsAsync();
            if (response.IsSuccess)
            {
                existingSessions = response.Data;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load existing sessions");
        }
        finally
        {
            isLoadingSessions = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = null;
        
        try
        {
            Logger.LogInformation("Creating session for user: {Name}", formModel.Name);
            
            var response = await ApiClient.SetSessionAsync(formModel.Name!);
            
            if (response.IsSuccess)
            {
                SessionService.SetUser(formModel.Name!);
                Logger.LogInformation("Session created successfully. Navigating to trades page.");
                Navigation.NavigateTo($"/trades?user={Uri.EscapeDataString(formModel.Name!)}", forceLoad: true);
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to create session. Please try again.";
                Logger.LogWarning("Failed to create session. Error: {Error}", response.ErrorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again.";
            Logger.LogError(ex, "Error during form submission");
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private void LoginAsUser(string userName)
    {
        SessionService.SetUser(userName);
        Navigation.NavigateTo($"/trades?user={Uri.EscapeDataString(userName)}", forceLoad: true);
    }
    
    private async Task DeleteUser(SessionResponse session)
    {
        deletingSessionId = session.SessionId;
        
        try
        {
            var response = await ApiClient.DeleteSessionAsync(session.SessionId);
            if (response.IsSuccess)
            {
                await LoadExistingSessions();
            }
            else
            {
                errorMessage = $"Failed to delete user: {response.ErrorMessage}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting user: {ex.Message}";
            Logger.LogError(ex, "Error deleting session");
        }
        finally
        {
            deletingSessionId = null;
        }
    }

    public class NameEntryModel
    {
        [Required(ErrorMessage = "Name is required")]
        [MinLength(2, ErrorMessage = "Name must be at least 2 characters")]
        public string? Name { get; set; }
    }
}